# Telegram Bot Token from BotFather
BOT_TOKEN=your_bot_token_here

# MongoDB Configuration
# Format: mongodb+srv://username:password@cluster.mongodb.net/ (for MongoDB Atlas)
# or: mongodb://localhost:27017 (for local MongoDB)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=terabox_bot

# Admin User ID (for sending restart notifications to admins)
# Get your ID by sending /start to @userinfobot on Telegram
ADMIN_ID=your_user_id_here

# Download directory
DOWNLOAD_DIR=./downloads

# Maximum file size in bytes (default 2GB)
MAX_FILE_SIZE=2147483648

# Request timeout in seconds
TIMEOUT=30

# Logging level
LOG_LEVEL=INFO
